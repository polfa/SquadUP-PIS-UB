        <!--                android:gravity="center"-->
        <!--                android:text="SETEA UN CLICK LISTENER EN TU ADAPTER" />-->

        <!--        </LinearLayout>-->

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>